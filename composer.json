{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "visio-soft/laraansible",
    "type": "library",
    "description": "A FilamentPHP 3 plugin for managing Ansible inventories, task templates, and deployments.",
    "keywords": ["laravel", "filament", "ansible", "plugin", "deployment"],
    "license": "MIT",
    "authors": [
        {
            "name": "VisioSoft",
            "email": "info@visio-soft.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^3.0",
        "laravel/framework": "^11.0|^12.0",
        "laravel/horizon": "^5.40"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "laravel/pint": "^1.24",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "VisioSoft\\LaraAnsible\\": "src/",
            "VisioSoft\\LaraAnsible\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VisioSoft\\LaraAnsible\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/pint"
    },
    "extra": {
        "laravel": {
            "providers": [
                "VisioSoft\\LaraAnsible\\LaraAnsibleServiceProvider"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
