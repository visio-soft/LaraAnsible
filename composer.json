{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "visiosoft/laraansible",
    "type": "library",
    "description": "A FilamentPHP 3 plugin for managing Ansible inventories, task templates, and deployments.",
    "keywords": ["laravel", "filament", "ansible", "plugin", "deployment"],
    "license": "MIT",
    "authors": [
        {
            "name": "VisioSoft",
            "email": "info@visiosoft.com.tr"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^3.0",
        "laravel/framework": "^11.0|^12.0",
        "laravel/horizon": "^5.40"
    },
    "require-dev": {
        "laravel/pint": "^1.24"
    },
    "autoload": {
        "psr-4": {
            "VisioSoft\\LaraAnsible\\": "src/"
        }
    },

    "scripts": {
        "format": "vendor/bin/pint"
    },
    "extra": {
        "laravel": {
            "providers": [
                "VisioSoft\\LaraAnsible\\LaraAnsibleServiceProvider"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
